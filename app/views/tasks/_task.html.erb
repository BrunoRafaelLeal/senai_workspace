    <div class = "panel panel-info">
        <div class= "panel-heading">
            <%= link_to edit_task_path(task) do %>
            Create <%= time_ago_in_words(task.created_at) %> ago
            <% end %>
            <%= link_to 'X', task_path(task), method: :delete, data: { confirm: "Are you sure"}, class: "pull-right" %>
        </div>
        <div class="panel-body">
            <%= raw(task.content_html) %>
            <%= task.content %>        
        <!--
        <td><%= link_to '<i class="fa fa-pencil-square-o" aria-hidden="true"></i>'.html_safe, edit_task_path(task) %></td>
        <td><%= link_to '<i class="fa fa-times" aria-hidden="true"></i>'.html_safe, task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     -->
         </div>
     
        <div class="panel-footer text-center">
            <div class="btn-group btn-group-justified">
        <% if task.state == 'doing' %>
    <%= link_to '<i class="fa fa-arrow-left" aria-hidden="true"></i>'.html_safe, change_task_path(task, state: "to_do"), method: :put, class: "btn btn-info btn-md btn-block" %>
    <%= link_to '<i class="fa fa-arrow-right" aria-hidden="true"></i>'.html_safe, change_task_path(task, state: "done"), method: :put, class: "btn btn-info btn-md btn-block" %>

    <% elsif task.state == 'done' %>

    <%= link_to '<i class="fa fa-arrow-left" aria-hidden="true"></i>'.html_safe, change_task_path(task, state: "to_do"), method: :put, class: "btn btn-info btn-md btn-block" %>

    <% else %>
        
    <%= link_to '<i class="fa fa-arrow-right" aria-hidden="true"></i>'.html_safe, change_task_path(task, state: "doing"), method: :put, class: "btn btn-info btn-md btn-block" %>
        
    <% end %>
        </div>
    </div>
</div>
    
    
    